---
const legalLinks = [
    'Terms',
    'Privacy',
    'Cookies'
];

const menuItemsProduct = [
    'Features',
    'APM',
    'Integrations',
    'Alerts',
    'API',
    'Pricing',
    'Documentation',
    'Support',
    'Resources',
    'Security'
];

const menuItemsAbout = [
    'Contact Us',
    'Partners',
    'Press',
    'Our Team',
    'Careers',
    'Legal'
];

const menuItemsSocial = [
    'Blog',
    'Espanol',
    'Japanese',
    'Instagram',
    'Twitter'
];
---

<footer class="px-8 py-10 bg-gradient-to-b from-datadogGray to-datadogGrayDark text-datadogStone">
    <div class="md:ml-40 md:mr-10">
        <section class="flex justify-between">
            <div class="flex flex-col justify-between">
                <a class="p-2 sm:py-4 sm:px-6 border-2 border-datadogStone rounded font-semibold uppercase text-white lg:px-8 hover:bg-datadogStone" href="#">Free Trial</a>

                <!-- footer links for phones (extra small) -->
                <menu class="block my-4 sm:hidden">
                    <li x-data="{ open:false }">
                        <strong class="hover:cursor-pointer" @click="open =! open">Product</strong>
                        <ul class="border-datadogStone mt-2 mb-4" x-show="open" @click.outside="open=false">
                            {menuItemsProduct.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                        </ul>
                    </li>
                    <li x-data="{ open:false }">
                        <strong class="hover:cursor-pointer" @click="open =! open">About</strong>
                        <ul class="border-datadogStone mt-2 mb-4" x-show="open" @click.outside="open=false">
                            {menuItemsAbout.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                        </ul>
                    </li>
                    <li x-data="{ open:false }">
                        <strong class="hover:cursor-pointer" @click="open =! open">Social</strong>
                        <ul class="border-datadogStone mt-2 mb-4" x-show="open" @click.outside="open=false">
                            {menuItemsSocial.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                        </ul>
                    </li>
                </menu>

                <p class="copywrite">&copy; Datadog 2017</p>
            </div>

            <!-- footer links for most screens (small and larger) -->
            <menu class="hidden sm:flex gap-8 w-2/3">
                <!-- TODO: make compoent for menu groups below; Need to solve for the uniqueness of Product group (grid classes applied to <ul> achieve desired layout) -->
                <li class="grow">
                    <strong>Product</strong>
                    <ul class="lg:grid lg:grid-rows-6 lg:grid-cols-2 lg:grid-flow-col border-t-2 border-datadogStone mt-2 pt-2">
                        {menuItemsProduct.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                    </ul>
                </li>
                <li class="grow">
                    <strong>About</strong>
                    <ul class="border-t-2 border-datadogStone mt-2 pt-2">
                        {menuItemsAbout.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                    </ul>
                </li>
                <li class="grow">
                    <strong>Social</strong>
                    <ul class="border-t-2 border-datadogStone mt-2 pt-2">
                        {menuItemsSocial.map((item) => <li><a class="hover:underline" href="#">{item}</a></li>)}
                    </ul>
                </li>
            </menu>

        </section>

        <section class="flex justify-center mt-20 text-center text-white">
            {legalLinks.map((link) => <a class="inline-block px-3 hover:underline" href="#">{link}</a><span class="last:hidden"> | </span>)}
        </section>
    </div>
</footer>