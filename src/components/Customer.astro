---
const { name, logoUrl, color } = Astro.props;

const listStyles = "block bg-[" + color + "] text-[0px] flex items-center min-h-40 p-4 first:hidden";
---

<li @click="handleCustomerClick" class={listStyles} id={name}>
    {name}
    <!-- double wrapping <div> elements needed to center logo via flexbox and keep image size constrained -->
    <div class="flex justify-center w-full">
        <div>
            <slot />
        </div>
    </div>
</li>